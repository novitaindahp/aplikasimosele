<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/llgrafik"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:orientation="vertical"
        android:weightSum="1">


    </LinearLayout>

    <EditText
        android:id="@+id/jum_bibit"
        android:layout_width="wrap_content"
        android:layout_height="53dp"
        android:layout_gravity="center_horizontal"
        android:inputType="text"
        android:drawableLeft="@drawable/ic_user_2"
        android:ems="10"
        android:textColorHint="#99ccff"
        android:paddingTop="25dp"
        android:textColor="#000000"
        android:hint="Jumlah Bibit "
        android:textSize="10dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:id="@+id/jum_panen"
    android:layout_width="30dp"
    android:layout_height="58dp"
    android:drawableLeft="@drawable/ic_action_password"
    android:ems="10"
        android:textSize="10dp"
    android:hint="Jumlah Panen "
    android:textColorHint="#99ccff"
    android:textColor="#000000"
        android:layout_below="@+id/jum_bibit"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/jum_bibit"
        android:layout_alignEnd="@+id/jum_bibit" />

    <Button
    android:id="@+id/bott"
    android:layout_width="20dp"
    android:layout_height="20dp"
    android:gravity="center"
    android:text="Lihat grafik"
        android:textSize="12dp"
    android:background="#99ccff"
    android:textStyle="bold"
    android:textColor="#ffffff"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/jum_panen"
        android:layout_alignRight="@+id/jum_bibit"
        android:layout_alignEnd="@+id/jum_bibit" />

    <TextView
        android:layout_width="67dp"
        android:layout_height="wrap_content"
        android:id="@+id/textView"
        android:text="Kg"
        android:textStyle="bold"
        android:textColor="#565656"
        android:textSize="12dp"
        android:layout_weight="0.14"
        android:layout_alignBottom="@+id/jum_bibit"
        android:layout_toRightOf="@+id/jum_bibit"
        android:layout_toEndOf="@+id/jum_bibit" />

    <TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="grafik belum dapat di lihat !!
Anda belum melewati masa panen"
    android:textSize="15dp"
    android:textStyle="bold"
    android:gravity="center"
    android:textColor="#bc3030"
        android:id="@+id/textView2"
        android:layout_below="@+id/llgrafik"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="67dp"
        android:layout_height="wrap_content"
        android:id="@+id/textView3"
        android:text="Kg"
        android:textStyle="bold"
        android:textColor="#565656"
        android:textSize="12dp"
        android:layout_weight="0.14"
        android:layout_above="@+id/bott"
        android:layout_toRightOf="@+id/jum_panen"
        android:layout_toEndOf="@+id/jum_panen" />


</RelativeLayout>