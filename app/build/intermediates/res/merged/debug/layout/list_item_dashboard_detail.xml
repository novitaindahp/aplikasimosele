<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:descendantFocusability="beforeDescendants" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/card_registrasi_background_selector"
        android:descendantFocusability="afterDescendants"
        android:orientation="vertical"
        android:paddingBottom="10dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:paddingTop="10dp" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <TextView
                android:id="@+id/lala"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/style_button_round_blue"
                android:gravity="center_vertical|center_horizontal"
                android:textColor="#FBFAFC"
                android:layout_marginRight="10dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >
	
                <TextView
                    android:id="@+id/lblNotifMdd"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:text="Notif Mdd"
                    android:textColor="#686868"
                    android:textSize="16sp"
                    android:textStyle="bold" />
	                
	            <LinearLayout
	                android:layout_width="match_parent"
	                android:layout_height="match_parent"
	                android:orientation="horizontal" >
	
	                <TextView
	                    android:id="@+id/lblNotifSt"
	                    android:layout_width="match_parent"
	                    android:layout_height="wrap_content"
	                    android:layout_gravity="bottom"
	                    android:gravity="right"
	                    android:text="NotifSt"
	                    android:textColor="#323133"
	                    android:textSize="12sp" />
	                
	            </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:background="@drawable/card_registrasi_background_selector"
		android:descendantFocusability="afterDescendants"
		android:orientation="vertical"
		android:paddingBottom="10dp"
		android:paddingLeft="15dp"
		android:paddingRight="15dp"
		android:paddingTop="10dp" >

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="match_parent" >

			<TextView
				android:id="@+id/lala"
				android:layout_width="40dp"
				android:layout_height="40dp"
				android:background="@drawable/style_button_round_blue"
				android:gravity="center_vertical|center_horizontal"
				android:textColor="#FBFAFC"
				android:layout_marginRight="10dp" />

			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:orientation="vertical" >

				<TextView
					android:id="@+id/lblNotifMdd"
					android:layout_width="fill_parent"
					android:layout_height="wrap_content"
					android:gravity="left"
					android:text="Notif Mdd"
					android:textColor="#686868"
					android:textSize="16sp"
					android:textStyle="bold" />

				<LinearLayout
					android:layout_width="match_parent"
					android:layout_height="match_parent"
					android:orientation="horizontal" >

					<TextView
						android:id="@+id/lblNotifSt"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:layout_gravity="bottom"
						android:gravity="right"
						android:text="NotifSt"
						android:textColor="#323133"
						android:textSize="12sp" />

				</LinearLayout>
			</LinearLayout>
		</LinearLayout>
	</LinearLayout>

</FrameLayout>